@model EjemploReporte.Models.Producto

<script src="/js/productos.js"></script>

<h1>Eliminar Producto</h1>
<p>¿Estás seguro que deseas eliminar el producto?</p>
<p><strong>@Model.TipoProducto</strong> - <strong>@Model.MarcaProducto</strong></p>

<form action="/Productos/DeleteConfirmed/@Model.IdProducto" method="post" style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Eliminar</button>
</form>

<a href="/Productos/Index" class="btn btn-secondary">Cancelar</a>
