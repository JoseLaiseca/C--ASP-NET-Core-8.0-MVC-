@model EjemploReporte.Models.Producto

<h1>Crear Producto</h1>
<form asp-action="Create" asp-controller="Productos" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="TipoProducto">Tipo de Producto</label>
        <input type="text" id="TipoProducto" name="TipoProducto" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="MarcaProducto">Marca</label>
        <input type="text" id="MarcaProducto" name="MarcaProducto" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ModeloProducto">Modelo</label>
        <input type="text" id="ModeloProducto" name="ModeloProducto" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="MedidasProducto">Medidas</label>
        <input type="text" id="MedidasProducto" name="MedidasProducto" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ColorProducto">Color</label>
        <input type="text" id="ColorProducto" name="ColorProducto" class="form-control" />
    </div>

    <div class="form-group">
        <label for="PrecioCosto">Precio de Costo</label>
        <input type="number" step="0.01" id="PrecioCosto" name="PrecioCosto" class="form-control" />
    </div>

    <div class="form-group">
        <label for="PrecioVenta">Precio de Venta</label>
        <input type="number" step="0.01" id="PrecioVenta" name="PrecioVenta" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Porcentaje">Porcentaje</label>
        <input type="number" step="0.01" id="Porcentaje" name="Porcentaje" class="form-control" required />

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="/Productos/Index" class="btn btn-secondary">Cancelar</a>
</form>
